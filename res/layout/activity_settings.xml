<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settings_textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/action_settings"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="42sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="523dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cooking_alerts_textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="COOKING ALERTS"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cooking_alerts_options1"
                        android:layout_width="425dp"
                        android:layout_height="wrap_content"
                        android:text="Next step reminder time"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/cooking_alerts_reminderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/settings_cooking_alerts_next_step_reminder_time"
                        android:prompt="@string/settings_cooking_alerts_next_step_reminder_time_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cooking_alerts_options2"
                        android:layout_width="425dp"
                        android1:layout_height="wrap_content"
                        android:text="Remainder Alarm Sound"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/cooking_alerts_reminderAlert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/reminder_alarm_type" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cooking_alerts_options3"
                        android:layout_width="425dp"
                        android:layout_height="wrap_content"
                        android:text="Start Step Alarm Sound"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/cooking_alerts_mainAlert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/start_step_alarm_type" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_kitchen_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/my_kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="MY KITCHEN"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/my_kitchen_options1"
                        android:layout_width="425dp"
                        android:layout_height="wrap_content"
                        android:text="Number of Ovens"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/my_kitchen_numOvens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/number_appliances" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/my_kitchen_text2"
                        android:layout_width="425dp"
                        android1:layout_height="wrap_content"
                        android:text="Number of Microwaves:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/my_kitchen_numMicrowaves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/number_appliances" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/my_kitchen_options3"
                        android:layout_width="425dp"
                        android:layout_height="wrap_content"
                        android:text="Number of Burners:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/my_kitchen_numBurners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/number_appliances" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/save_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:text="SAVE SETTINGS" />
    </LinearLayout>

</RelativeLayout>