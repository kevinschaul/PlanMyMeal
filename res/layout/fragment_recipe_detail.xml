<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecipeDetailFragment" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	            
	    <TextView
		    android:id="@+id/fragment_recipe_title"
		    android:text="Recipe title"
		    android:layout_alignParentLeft="true"
		    style="@style/CookableTitle" />
	    
	    <LinearLayout
	        android:id="@+id/fragment_recipe_button_wrapper"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:orientation="horizontal"
	        style="?android:attr/buttonBarStyle" >
		
		    <Button
	            android:id="@+id/fragment_recipe_button_edit"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:text="Edit"
	            style="?android:attr/buttonBarButtonStyle" />
	        <Button
	            android:id="@+id/fragment_recipe_button_delete"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:text="Delete"
	            style="?android:attr/buttonBarButtonStyle" />
	        <Button
	            android:id="@+id/fragment_recipe_button_cook"
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:text="Start cooking"
	            style="?android:attr/buttonBarButtonStyle" />
	    </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_recipe_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        style="@style/DetailItem" />
    
    <TextView
        android:id="@+id/fragment_recipe_tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        style="@style/DetailLabel" />
    
    <LinearLayout
        android:id="@+id/fragment_recipe_tags_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>
