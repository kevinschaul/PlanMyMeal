<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="0dip"
    android:id="@+id/row_cook_recipe_container" >
    
    		<TextView
	            android:id="@+id/recipeCookName"
	            style="@style/CookableTitle" >
	        </TextView>
	        
    		<TextView
		        android:id="@+id/recipeCookIngredientsLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Ingredients"
		        style="@style/DetailLabel" />
    
			<GridView
			    android:id="@+id/recipeCookIngredients"
			    android:layout_width="300dip"
			    android:layout_height="200dip"
			    android:layout_centerVertical="true"
			    android:layout_marginLeft="0dp"
			    android:layout_marginBottom="0dp"
			    android:numColumns="2" 
			    android:verticalSpacing="0dp">
			</GridView>
	
    		<TextView
		        android:id="@+id/recipeCookStepsLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Steps"
		        style="@style/DetailLabel" />	    
	        <ListView
	            android:id="@+id/recipeCookSteps"
	            android:layout_width="300dip"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="0dip"
	            android:layout_marginTop="0dip">
	        </ListView>  
</LinearLayout>