<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:padding="8dp"
    tools:context=".EditRecipeActivity" >

    <RelativeLayout
        android:id="@+id/edit_recipe_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/edit_recipe_relativeLayout2"
            android:layout_width="620dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ScrollView
                android:id="@+id/edit_recipe_detailsScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" >

                <LinearLayout
                    android:id="@+id/edit_recipe_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/edit_recipe_recipeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Recipe Title"
                        android:textSize="40sp" >
                    </EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/edit_recipe_numServingsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Number of Servings"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/edit_recipe_numServings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_recipe_addTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:ems="10"
                        android:text="New recipe Tag"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/edit_recipe_newTagName"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="New Tag Name" />

                        <Button
                            android:id="@+id/addTagButton"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add Tag" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_recipeTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="My recipe Tags"
                        android:textSize="20sp" />

                    <HorizontalScrollView
                        android:id="@+id/edit_recipe_scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.67" >

                        <LinearLayout
                            android:id="@+id/edit_recipe_tag_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/edit_recipe_ingredientsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredients"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:id="@+id/edit_recipe_ingredientsList"
                            android:layout_width="498dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_recipe_directionsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Directions"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:id="@+id/edit_recipe_directionsList"
                            android:layout_width="498dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/saveRecipeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Recipe" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_recipe_addNewStuff"
            android:layout_width="620dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >
            
            <ScrollView
                android:id="@+id/edit_recipe_newStuffScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" >
            
            <LinearLayout
                android:id="@+id/edit_recipe_new_stuff_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/edit_recipe_new_i_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/edit_recipe_ingredient_name_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/edit_recipe_ingredient_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.76"
                            android:text="Ingredient Name"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/edit_recipe_ingredient_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.09"
                            android:ems="10"
                            android:hint="Type Ingredient Name" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_recipe_ingredient_amount_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/edit_recipe_ingredient_amount_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:text="Ingredient Amount"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/edit_recipe_ingredient_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.12"
                            android:ems="10"
                            android:hint="Numerical values only"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_recipe_ingredient_unit_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/edit_recipe_ingredient_unit_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.81"
                            android:text="Ingredient Units"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/edit_recipe_ingredient_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.28"
                            android:ems="10"
                            android:hint="oz, lbs, tbsp, etc (optional)" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/edit_recipe_ingredient_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Save Ingredient" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit_recipe_new_step_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/edit_recipe_step_name_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <TextView
                            android:id="@+id/edit_recipe_step_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.76"
                            android:text="Step Name"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/edit_recipe_step_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.09"
                            android:ems="10"
                            android:hint="Type Step Name" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_recipe_step_time_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/edit_recipe_step_time_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:text="Time step takes"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/edit_recipe_step_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.12"
                            android:ems="10"
                            android:hint="Numerical values only"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_recipe_step_appliances_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/edit_recipe_appliances_used_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appliances Used"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <CheckBox
                            android:id="@+id/oven_used_chk_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oven" />

                        <CheckBox
                            android:id="@+id/burner_used_chk_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burner" />

                        <CheckBox
                            android:id="@+id/microwave_used_chk_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Microwave" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_recipe_step_active_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal" >
                         <RadioGroup
        					android:id="@+id/radio_step_active_group"
        					android:layout_width="wrap_content"
       						android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/step_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Step"
                            android:checked="true"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <RadioButton
                            android:id="@+id/step_inactive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Non-Active Step"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        </RadioGroup>
                    </LinearLayout>

                    <Button
                        android:id="@+id/edit_recipe_step_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Save New Step" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>