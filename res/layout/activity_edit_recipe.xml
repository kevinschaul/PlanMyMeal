<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditRecipeActivity" >

    <RelativeLayout
        android:id="@+id/edit_recipe_relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_recipe_title" >

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/edit_recipe_relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ScrollView
                android:id="@+id/edit_recipe_detailsScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" >

                <LinearLayout
                    android:id="@+id/edit_recipe_details_container"
                    android:layout_width="498dp"
                    android:layout_height="322dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/edit_recipe_recipeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Recipe Title"
                        android:textSize="40sp" >
                    </EditText>

                    <LinearLayout
                        android:layout_width="498dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/edit_recipe_numServingsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:text="Number of Servings"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/edit_recipe_numServings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_recipe_addTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:ems="10"
                        android:text="New recipe Tag"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="498dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/edit_recipe_newTagName"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="New Tag Name" />

                        <Button
                            android:id="@+id/addTagButton"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add Tag" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_recipeTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="My recipe Tags"
                        android:textSize="20sp" />

                    <HorizontalScrollView
                        android:id="@+id/edit_recipe_scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.67" >

                        <LinearLayout
                            android:id="@+id/edit_recipe_tag_container"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="498dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/edit_recipe_ingredientsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredients"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:id="@+id/edit_recipe_ingredientsList"
                            android:layout_width="498dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <Button
                            android:id="@+id/edit_recipe_addIngredientButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add New Ingredient" />

                        <TextView
                            android:id="@+id/edit_recipe_directionsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Directions"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:id="@+id/edit_recipe_directionsList"
                            android:layout_width="498dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <Button
                            android:id="@+id/edit_recipe_addStepButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add New Step" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/saveRecipeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save Recipe" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/edit_recipe_relativeLayout2"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/edit_recipe_newIngredientName"
                android:layout_width="498dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="123dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/edit_recipe_ingredientNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredient Name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edit_recipe_ingredientNameInput"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.66"
                    android:ems="10" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/edit_recipe_saveIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Save Ingredient" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edit_recipe_saveIngredient"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/linearLayout1"
                android:layout_marginBottom="101dp" >

                <TextView
                    android:id="@+id/edit_recipe_unitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edit_recipe_unitInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.88"
                    android:ems="10"
                    android:hint="Ingredient Unit (oz, lbs, tbsp, etc.)" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/edit_recipe_ingredientAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edit_recipe_ingredientAmountInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.51"
                    android:ems="10"
                    android:hint="Must be a numberical value."
                    android:inputType="number" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/edit_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Edit recipe"
        android:textSize="40sp" />

</RelativeLayout>