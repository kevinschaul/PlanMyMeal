    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CCMealDetailFragment" >
    
 
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	            
	    <TextView
		    android:id="@+id/cc_fragment_meal_title"
		    android:text="Meal title"
		    android:layout_alignParentLeft="true"
		    style="@style/CookableTitle" />
	    
	    <LinearLayout
	        android:id="@+id/cc_fragment_meal_button_wrapper"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:orientation="horizontal"
	        style="?android:attr/buttonBarStyle" >
	        
	    </LinearLayout>
    </RelativeLayout>

   	<View
	    style="@style/Divider"
	    android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/cc_fragment_meal_button_import"
        style="@style/ActionButton"
        android:text="Import Meal"
         />
    <View
	    style="@style/Divider"
	    android:layout_marginBottom="8dp" />
        
    <TextView
        android:id="@+id/cc_fragment_meal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        style="@style/DetailItem" />
    
    <TextView
        android:id="@+id/cc_fragment_meal_tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        style="@style/DetailLabel" />
    
    <LinearLayout
        android:id="@+id/cc_fragment_meal_tags_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/cc_fragment_meal_recipes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Included recipes"
        style="@style/DetailLabel" />
        
    <ListView
        android:id="@+id/cc_fragment_meal_recipe_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" >
    </ListView>
 
