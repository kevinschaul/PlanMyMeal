<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditMealActivity" >

    <TextView
        android:id="@+id/edit_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="90dp"
        android:text="Edit Meal"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_meal_title" >

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/edit_meal_mealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:text="Meal Title"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/edit_meal_myRecipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edit_meal_mealName"
            android:layout_alignBottom="@+id/edit_meal_mealName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:ems="10"
            android:text="My Recipes"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/edit_meal_addTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_meal_mealName"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:text="New Meal Tag"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/autoComplete_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_meal_addTag"
            android:layout_below="@+id/edit_meal_addTag"
            android:layout_toLeftOf="@+id/addTagButton"
            android:ems="10"
            android:text="New Tag Name" />

        <TextView
            android:id="@+id/edit_mealTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/autoComplete_tags"
            android:layout_below="@+id/addTagButton"
            android:text="My Meal Tags"
            android:textSize="20sp" />
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="227dp" >

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="Tag4" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag1" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag3" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="Tag2" />

    </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edit_mealTags"
            android:layout_marginTop="78dp"
            android:textSize="30sp"
            android:text="Recipes in Meal Name" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/edit_meal_mealName"
            android:layout_below="@+id/textView1" >

        </ListView>

        <Button
            android:id="@+id/addTagButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/edit_meal_mealName"
            android:layout_alignTop="@+id/autoComplete_tags"
            android:text="Add Tag" />

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_meal_myRecipes"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/edit_meal_addTag" >

        </ListView>

    </RelativeLayout>

    

</RelativeLayout>