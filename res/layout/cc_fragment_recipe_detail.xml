<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CCRecipeDetailFragment" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	            
	    <TextView
		    android:id="@+id/cc_fragment_recipe_title"
		    android:text="Recipe title"
		    android:layout_alignParentLeft="true"
		    style="@style/CookableTitle" />
	    
	   	<LinearLayout
	        android:id="@+id/cc_fragment_recipe_button_wrapper"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:orientation="horizontal"
	        style="?android:attr/buttonBarStyle" >
		
		    
		</LinearLayout>
    </RelativeLayout>
    
	<View
	    style="@style/Divider"
	    android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/cc_fragment_recipe_button_import"
        style="@style/ActionButton"
        android:text="Import Recipe"
         />
	<View
	    style="@style/Divider"
	    android:layout_marginBottom="8dp" />
	
    <TextView
        android:id="@+id/cc_fragment_recipe_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        style="@style/DetailItem" />

    <TextView
        android:id="@+id/cc_fragment_recipe_tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        style="@style/DetailLabel" />
    
    <LinearLayout
        android:id="@+id/cc_fragment_recipe_tags_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/cc_fragment_recipe_ingredients_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        style="@style/DetailLabel" />
    
    <LinearLayout
        android:id="@+id/cc_fragment_recipe_ingredients_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/cc_fragment_recipe_steps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"
        style="@style/DetailLabel" />
        
    <LinearLayout
        android:id="@+id/cc_fragment_recipe_steps_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
